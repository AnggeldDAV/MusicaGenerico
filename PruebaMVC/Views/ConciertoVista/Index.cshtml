@model IEnumerable<PruebaMVC.Models.Concierto>

<div>
    <div style="height:150px;"></div>
    @await Component.InvokeAsync("ConciertoCarousel", @ViewBag.IdConcierto)
    <div style="height:150px;"></div>
</div>

<div class="d-flex flex-wrap justify-content-around">
    @foreach(var item in Model)
    {
        @await Component.InvokeAsync("TarjetaConcierto", item.Id)
    }
</div>
<div class="d-flex justify-content-center">
    <div id="pagAnterior" class="btn" style="border-radius:25px;background-color:darkturquoise;color:white;width:150px;height:50px;">1</div>
    <div class="ms-5 text-center d-flex justify-content-center align-items-center" style="background-color:darkturquoise;color:white;width:150px;height:50px;">
        <div>Pagina actual: <p style="display:inlne;" id="pagActual">1</p></div>
    </div>
    <div id="pagSiguiente" class="ms-5 btn" style="border-radius:25px;background-color:darkturquoise;color:white;width:150px;height:50px;">2</div>
</div>
<section class="filtroIcono d-flex flex-column jacquard-24-regular" style="color:white;">
    @await Component.InvokeAsync("IconoFiltro")
    <form id="Filtro" class="d-flex flex-column align-items-center" style="width:450px;background: rgba(0, 102, 255, 0.6);font-size:1.5em;">
        <div class="d-flex justify-content-around" style="width:450px;">
            <div>
                @await Component.InvokeAsync("ComboBoxGrupos")
            </div>
            <div class="mt-3 d-flex flex-column">
                <label for="filtroNombreConcierto">Nombre concierto</label>
                <input class="form-control" type="text" id="filtroNombreConcierto" style="width:150px;"/>
            </div>
        </div>
        <div class="d-flex justify-content-around" style="width:450px;">
            <div>
                @await Component.InvokeAsync("LugarComboBoxConcierto")
            </div>
            <div class="mt-3 d-flex flex-column">
                <label for="filtroPrecioConcierto">Precio concierto</label>
                <input type="number" id="filtroPrecioConcierto" style="width:150px;" pattern="^(\d+)?([.]?\d{0,1})?$" />
            </div>
        </div>
        <div class="d-flex justify-content-around" style="width:450px;">
            <input id="ConciertoReset" class="mt-3" type="reset" style="color:white;background-color:dodgerblue;width:150px;" value="Reset"/>
            <div class="mt-3 d-flex flex-column">
                <label for="filtroFechaConcierto">Fecha concierto</label>
                <input type="datetime-local" id="filtroFechaConcierto" style="width:150px;"/>
            </div>
        </div>
    </form>
</section>
