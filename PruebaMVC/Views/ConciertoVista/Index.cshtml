@model IEnumerable<PruebaMVC.Models.Concierto>

<div>
    <div style="height:150px;"></div>
    @await Component.InvokeAsync("ConciertoCarousel", @ViewBag.IdConcierto)
    <div style="height:150px;"></div>
</div>

<div class="d-flex flex-wrap justify-content-around">
    @foreach(var item in Model)
    {
        @await Component.InvokeAsync("TarjetaConcierto", item.Id)
    }
</div>
<div class="d-flex justify-content-center">
    <div id="pagAnterior" class="btn" style="border-radius:25px;background-color:darkturquoise;color:white;width:150px;height:50px;">1</div>
    <div class="ms-5 text-center d-flex justify-content-center align-items-center" style="background-color:darkturquoise;color:white;width:150px;height:50px;">
        <div>Pagina actual: <p style="display:inlne;" id="pagActual">1</p></div>
    </div>
    <div id="pagSiguiente" class="ms-5 btn" style="border-radius:25px;background-color:darkturquoise;color:white;width:150px;height:50px;">2</div>
</div>
